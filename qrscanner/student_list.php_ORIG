        <?php
        if ($result->num_rows > 0) {
            // Output each row
            while ($row = $result->fetch_assoc()) {
                echo "<tr>
                        <td>{$row['RollNo']}</td>
                        <td>{$row['Name']}</td>
                        <td>{$row['Email']}</td>
                        <td>{$row['Course']}</td>
                    </tr>";
            }
        } else {
            echo "<tr><td colspan='4'>No students found.</td></tr>";
        }

        $conn->close();
        ?>
